<Window x:Class="WpfProyectoBancoP2C.WpfSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBancoP2C"
        mc:Ignorable="d"
        Title="SIGN UP"
        Height="550"
        Width="400"
        Icon="/images/LogoBisa.png">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/images/BancoBisa2.png" Opacity="0.9"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblTitulo"
               Content="SIGN UP :3"
               Grid.ColumnSpan="2"
               FontSize="30"/>
        <Label x:Name="lblNombre"
               Content="Nombre: "
               FontSize="30"
               Grid.Row="1"/>
        <TextBox x:Name="txtNombre"
                 Grid.Column="2"
                 Grid.Row="1"/>

        <Label x:Name="lblApPaterno"
               Content="Ap.Paterno:"
               FontSize="30"
               Grid.Row="2"/>
        <TextBox x:Name="txtApPaterno"
                 Grid.Column="2"
                 Grid.Row="2"/>

        <Label x:Name="lblApMaterno"
               Content="Ap.Materno:"
               FontSize="30"
               Grid.Row="3"/>
        <TextBox x:Name="txtApMaterno"
                 Grid.Column="2"
                 Grid.Row="3"/>

        <Label x:Name="lblCelular"
               Content="Celular:"
               Grid.Row="4"
               FontSize="30"/>
        <TextBox x:Name="txtCelular"
                 Grid.Column="2"
                 Grid.Row="4"/>

        <Label x:Name="lblEmail"
               Content="Email"
               FontSize="30"
               Grid.Row="5"/>
        <TextBox x:Name="txtEmail"
                 Grid.Column="2"
                 Grid.Row="5"/>

        <Label x:Name="lblañoNac"
               Content="Año.Nax:"
               FontSize="30"
               Grid.Row="6"/>
        <TextBox x:Name="txtañoNac"
                 Grid.Column="2"
                 Grid.Row="6"/>

        <Label x:Name="lblContraseña"
               Content="Contraseña:"
               FontSize="30"
               Grid.Row="7"/>
        <TextBox x:Name="txtContraseña"
                 Grid.Column="2"
                 Grid.Row="7"/>

        <PasswordBox x:Name="pwdContra"
                     Grid.Row="7"
                     Grid.Column="1"
                     Height="50"
                     Margin="10,0"
                     FontSize="20"
                     VerticalContentAlignment="Center"
                     Background="DarkRed"
                     Opacity="0.7"/>

        <Button x:Name="btnLimpiar"
                Content="Limpiar"
                Grid.Row="8"
                Grid.Column="0"
                Click="btnLimpiar_Click"/>

        <Button x:Name="btnAceptar"
                Content="Aceptar"
                Grid.Row="8"
                Grid.Column="1"
                Click="btnAceptar_Click"/>

        <Label x:Name="lblMensaje"
               Foreground="Red"
               Content=""
               Grid.Row="9"
               Grid.ColumnSpan="2"
               FontSize="15"/>

        <TextBlock x:Name="txtResultado"
           Grid.Row="10"
           Margin="10"
           Grid.ColumnSpan="2"
           Opacity="1"
           Background="DarkGreen"
           Foreground="White"
           FontWeight="Bold"/>


    </Grid>
</Window>
