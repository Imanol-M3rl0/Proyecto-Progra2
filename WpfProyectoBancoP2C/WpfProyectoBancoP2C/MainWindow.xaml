<Window x:Class="WpfProyectoBancoP2C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProyectoBancoP2C"
        mc:Ignorable="d"
        Title="Banco Bisa - Login"
        Height="550"
        Width="400"
        Icon="/images/LogoBisa.png">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="/images/BancoBisa2.png" Opacity="0.9"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblTitulo"
               Content="LOGIN :D"
               Grid.ColumnSpan="2"
                FontSize="50"
               />
        <Label x:Name="lblemail"
               Content="Email:"
               FontSize="30"
               Grid.Row="1"/>
        <TextBox x:Name="TxtEmail"
                 Grid.Column="2"
                 Grid.Row="1"/>

        <Label x:Name="lblContraseña"
               Content="Contraseña:"
               Grid.Row="2"
               FontSize="30"/>
        <PasswordBox x:Name="pwdContra"
                     Grid.Row="2"
                     Grid.Column="1"
                     Height="50"
                     Margin="10,0"
                     FontSize="20"
                     VerticalContentAlignment="Center"
                     Background="DarkRed"
                     Opacity="0.7"/>
        <Button x:Name="btnLimpiar"
                Content="Limpiar"
                Grid.Row="3"
                Click="btnLimpiar_Click"/>
        
        <Button x:Name="btnAceptar"
                Content="Aceptar"
                Grid.Row="3"
                Grid.Column="2"
                Click="btnAceptar_Click"/>
        <Button x:Name="btnRegistrar"
                Content="Registrarse"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Click="btnRegistrar_Click"
               />
        <Label x:Name="lblMensaje"
               Foreground="Red"
               Content=""
               Grid.Row="4"
               Grid.ColumnSpan="2"
               FontSize="15"/>
        

    </Grid>
</Window>
